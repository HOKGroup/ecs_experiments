{
    "$schema": "http://json-schema.org/schema#",
    "title": "task.details",
    "version": "V0.01",
    "type": "object",
    "properties": {
      "group_name": {
        "type": "string",
        "description": "Group Name"
      },
      "group_description": {
        "type": "string",
        "description": "Group Description"
      },
      "close_automatically": {
        "type": "boolean",
        "description": "Should this group be closed Automatically"
     },
      "close_date": {
      "type": "string",
      "description": "Date that this group will deactivate itself",
      "format": "date-time"
    }
   }
}