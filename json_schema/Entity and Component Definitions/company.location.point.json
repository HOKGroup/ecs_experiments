{
    "$schema": "http://json-schema.org/schema#",
    "title": "company.location.point",
    "version": "V0.01",
    "data_format": "geojson",
    "type": "object",
    "required": [
      "type",
      "coordinates"
    ],
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "Point"
        ]
      },
      "coordinates": {
        "type": "array",
        "minItems": 2,
        "items": {
          "type": "number"
        }
      },
      "bbox": {
        "type": "array",
        "minItems": 4,
        "items": {
          "type": "number"
        }
      }
    }
}