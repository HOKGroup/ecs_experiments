{
    "$schema": "http://json-schema.org/schema#",
    "title": "submittal.requirements",
    "version": "V0.01",
    "type": "object",
    "properties": {
      "SubmitalRequirement": {
        "type": "array",
        "items": { "$ref": "#/$defs/itemstosubmit" }
        }
      },
      "$defs":{
          "itemstosubmit":{
            "type":"object",
            "required": ["Specification Section Name","Specification Section Number","Section Name","Section Number","Section Text"],
            "properties":{
              "Specification Section Name":{
                "type":"string",
                "description": "The Name of the Section"
              },
              "Specification Section Number":{
                "type":"string",
                "description": "The Number of the Section"
              },
              "Section Name":{
                "type":"string",
                "description": "The name of the subsection of the specification "
              }, 
              "Item Type":{
                "type":"string",
                "description": "The type of item required, Drawing, Report etc"
              },
              "SubSection Number":{
                "type":"string",
                "description": "The Number of the subsection of the document"
              },
              "SubSection Text":{
                "type":"string",
                "description": "The Text from the subsection of the document"
              }
            }
          }

      }
        

    }
  